{
  "manifest_version": 3,
  "name": "Trackit",
  "version": "0.1.0",
  "description": "Easily switch between flight trackers.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_icon": "icons/icon_gray.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.flightradar24.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.flightradar24.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "contentScript.js",
        "popup.js"
      ]
    }
  ]
}